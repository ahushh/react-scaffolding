{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "allowJs": true,
    "strictNullChecks": false,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "lib": [
      "es6",
      "es7",
      "es2017",
      "es2018",
      "dom"
    ]
  },
  "exclude": [
    "dist",
    "build"
//    "node_modules"
//    "__tests__", // it affects tslint :(
//    "src/__tests__",
//    "__mocks__"
  ]
}
