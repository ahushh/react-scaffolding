{
  "name": "react-scaffold",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "rootDir": "src",
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "webpack-dev-server --colors --progress --mode=development",
    "start:prod": "webpack-dev-server --colors --progress --mode=production",
    "build": "npm run build:prod",
    "build:dev": "npm run clean && webpack --progress --colors --mode=development",
    "build:prod": "npm run clean && webpack --progress --colors --mode=production",
    "dev": "npm run start",
    "prod": "npm run build:prod",
    "test": "npm run jest",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "lint:scss": "stylelint --config ./stylelint.config.js  --syntax scss \"./src/**/*.scss\"",
    "lint:js": "eslint \"./*.js\" ./src/ --ext .jsx,.js",
    "lint:ts": "tslint -c tslint.json --project ./tsconfig.json \"src/**/*.{tsx,ts}\"",
    "lint": "npm --harmony run lint:scss; npm run lint:js; npm run lint:ts",
    "lintfix": "npm run lintfix:js; npm run lintfix:ts; npm run lintfix:scss",
    "lintfix:js": "eslint --ext .js,.jsx .*/*.js ./src --fix",
    "lintfix:ts": "tslint -c ./tslint.json --project ./tsconfig.json \"./src/**/*.{tsx,ts}\" --fix",
    "lintfix:scss": "stylefmt --syntax scss --config ./stylelint.config.js --recursive \"./src/**/*.scss\"",
    "ts-format": "tsfmt -r",
    "clean": "rm -fr ./dist"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.3",
    "@types/enzyme": "^3.1.9",
    "@types/history": "^4.6.2",
    "@types/jest": "<22",
    "@types/lodash": "^4.14.106",
    "@types/node": "^8.10.1",
    "@types/react": "^16.3.1",
    "@types/react-bootstrap-typeahead": "^2.3.0",
    "@types/react-dom": "^16.0.3",
    "@types/react-paginate": "^4.3.2",
    "@types/react-redux": "^5.0.13",
    "@types/react-router": "^4.0.23",
    "@types/react-router-bootstrap": "^0.24.4",
    "@types/react-router-dom": "^4.2.6",
    "@types/react-router-redux": "^5.0.12",
    "@types/react-transition-group": "^2.0.7",
    "@types/reactstrap": "^5.0.20",
    "@types/redux-actions": "^2.2.4",
    "@types/redux-auth-wrapper": "^2.0.7",
    "@types/redux-mock-store": "0.0.13",
    "@types/socket.io-client": "^1.4.32",
    "@types/validate.js": "^0.11.0",
    "@types/webpack": "^4.1.3",
    "@types/webpack-env": "latest",
    "arui-presets": "^4.13.4",
    "arui-presets-ts": "^1.0.0",
    "autoprefixer": "^8.2.0",
    "awesome-typescript-loader": "^3.4.0",
    "axios-mock-adapter": "^1.14.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "dotenv": "^5.0.0",
    "dotenv-webpack": "^1.5.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "eslint-plugin-jsdoc": "^3.5.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-sort-class-members": "^1.3.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^3.1.0",
    "husky": "^0.15.0-rc.13",
    "jest": "<22",
    "lint-staged": "^6.1.1",
    "node-sass": "^4.9.0",
    "postcss": "^6.0.21",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.3",
    "postcss-reporter": "^5.0.0",
    "postcss-url": "^7.3.0",
    "react-hot-loader": "^3.1.3",
    "react-router-test-context": "^0.1.0",
    "react-test-renderer": "^16.3.0",
    "react-transition-group": "^2.3.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-freeze": "^0.1.5",
    "redux-mock-store": "^1.5.1",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.19.0",
    "stylefmt": "^6.0.0",
    "stylelint-scss": "^2.5.0",
    "ts-jest": "<22",
    "ts-loader": "^4.1.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1",
    "typescript-formatter": "^7.1.0",
    "url-loader": "^0.6.2",
    "utility-types": "^1.1.0",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.5",
    "@fortawesome/fontawesome-free-brands": "^5.0.9",
    "@fortawesome/fontawesome-free-regular": "^5.0.9",
    "@fortawesome/fontawesome-free-solid": "^5.0.9",
    "@types/recompose": "^0.24.7",
    "axios": "^0.17.1",
    "babel-jest": "^22.4.3",
    "bem-ts": "^0.6.0",
    "bootstrap": "^4.0.0",
    "classnames": "^2.2.5",
    "core-js": "^2.5.4",
    "izitoast": "^1.2.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.10",
    "moment-es6": "^1.0.0",
    "npm": "^5.8.0",
    "null-loader": "^0.1.1",
    "qs": "^6.5.1",
    "raf": "^3.4.0",
    "react": "^16.3.0",
    "react-bootstrap-typeahead": "^3.1.3",
    "react-color": "^2.14.1",
    "react-datepicker": "^1.4.0",
    "react-dom": "^16.3.0",
    "react-ladda": "^6.0.0",
    "react-paginate": "^5.2.3",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-bootstrap": "^0.24.4",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-rte": "^0.16.1",
    "react-select": "^2.0.0-alpha.8",
    "reactstrap": "^5.0.0",
    "recharts": "^1.0.0-beta.10",
    "recompose": "^0.26.0",
    "redux": "^3.7.2",
    "redux-actions": "^2.3.0",
    "redux-auth-wrapper": "^2.0.2",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "socket.io-client": "^2.1.1",
    "uuid": "^3.2.1",
    "validate.js": "^0.12.0",
    "x-react-ladda": "^6.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "src/**/*.{jsx,js}": [
        "eslint -c eslint.json",
        "jest --bail --findRelatedTests"
      ],
      "src/**/*.{tsx,ts}": [
        "tslint -c tslint.json",
        "jest --bail --findRelatedTests"
      ],
      "src/**/*.{css}": "stylelint ./stylelint.config.js",
      "src/**/*.{scss}": "stylelint --syntax scss"
    }
  },
  "jest": {
    "testRegex": "(src/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/__mocks__/style-mock.ts"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "<rootDir>/__tests__/setup.ts",
      "<rootDir>/__mocks__/browser-mocks.ts"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!react-popper|reactstrap|jest-runtime)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/build"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
